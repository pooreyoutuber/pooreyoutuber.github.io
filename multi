<meta charset="UTF-8">
<title>YouTube Multi-Viewer Tool</title>
<style>
body { font-family: Arial; padding: 20px; }
input, button { padding: 10px; margin: 10px 0; }
iframe { margin: 10px 0; width: 560px; height: 315px; }
</style>
</head>
<body>
<h1>YouTube Multi Viewer</h1>
<input type="text" id="yt-link" placeholder="Paste YouTube link here">
<button onclick="openVideo()">Open Video</button>
<div id="video-container"></div>

<script>
function openVideo() {
    const link = document.getElementById('yt-link').value;
    if (!link) { alert('Please enter a YouTube link'); return; }

    // Extract Video ID
    let videoId = '';
    const match = link.match(/v=([a-zA-Z0-9_-]{11})/);
    if(match) videoId = match[1];
    else { alert('Invalid YouTube link'); return; }

    // Clear previous iframes
    const container = document.getElementById('video-container');
    container.innerHTML = '';

    // Create iframes for multiple quality preview (iframe does not change quality automatically)
    const iframe = document.createElement('iframe');
    iframe.src = `https://www.youtube.com/embed/${videoId}`;
    iframe.allow = "accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture";
    iframe.allowFullscreen = true;
    container.appendChild(iframe);
}
</script>
</body>
</html>
