{
  "manifest_version": 3,
  "name": "CroxyProxy Auto Launcher",
  "version": "1.0",
  "description": "Automatically opens a target URL in CroxyProxy with optional scrolling and refresh.",
  "permissions": [
    "scripting",
    "activeTab" 
  ],
  "host_permissions": [
    "https://www.croxyproxy.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
